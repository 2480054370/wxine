 <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/border"
            android:id="@+id/evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

     <android.support.design.widget.AppBarLayout
         android:id="@+id/pj_barlayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:theme="@style/AppTheme.AppBarOverlay">

         <android.support.v7.widget.Toolbar
             android:id="@+id/pj_toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="#0F9D58"
             app:navigationIcon="?attr/homeAsUpIndicator"
             app:popupTheme="@style/AppTheme.PopupOverlay" />
     </android.support.design.widget.AppBarLayout>
      <LinearLayout
          android:layout_below="@+id/pj_barlayout"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:orientation="vertical"
             android:background="#fff"
             android:id="@+id/bg"
          >
            <LinearLayout
                android:id="@+id/im_bg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/b4"
                android:orientation="horizontal"
                >



            </LinearLayout>

          <LinearLayout
              android:id="@+id/content1"
              android:layout_below="@+id/userimage"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="50dp"
              android:layout_marginLeft="20dp"
              android:weightSum="1">

              <android.support.design.widget.TextInputLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingRight="10dp">

                  <AutoCompleteTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="评价："
                      android:inputType="textLongMessage"
                      android:maxLines="3"
                      android:singleLine="true"
                      android:textColor="#000" />
              </android.support.design.widget.TextInputLayout>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/content2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/content1"
              android:orientation="horizontal"
              android:layout_marginLeft="20dp"
              android:weightSum="1">

              <android.support.design.widget.TextInputLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:paddingRight="10dp">

                  <AutoCompleteTextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="评价人员："
                      android:inputType="textLongMessage"
                      android:maxLines="3"
                      android:singleLine="true"
                      android:textColor="#000" />
              </android.support.design.widget.TextInputLayout>


          </LinearLayout>

      </LinearLayout>



            <com.wxine.android.utils.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/face" />






            <LinearLayout
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/bg"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/test1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="活动内容:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <RatingBar
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/test1"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/test2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="吸引程度:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <RatingBar
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/test2"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                   >

                    <TextView
                        android:id="@+id/test3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="总体程度:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <RatingBar
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/test3"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_below="@+id/content3"
                android:layout_marginLeft="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"

                   >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动照片:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/im_pj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/takephoto"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:paddingRight="20dp"
                    android:layout_weight="1"
                    >
                    <Button
                        android:id="@+id/cancel1"
                        style="?android:textAppearanceSmall"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:text="取消"
                        android:background="@drawable/gray_button"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <Button
                        android:id="@+id/submit1"
                        style="?android:textAppearanceSmall"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:text="提交"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:background="@drawable/green_button"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/cancel1"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
