<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wxine.android.CommunitiesFragment">

    <!-- TODO: Update blank fragment layout -->
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        >

          <Button
              android:id="@+id/close_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:drawableLeft="@drawable/close"
              android:paddingLeft="60dp"
              android:background="#E4E4E4"
              android:text="取消"
              android:textSize="35px"
              android:textColor="#737373"
              />
        <TextView
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="#B9B9B9"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E4E4E4"
            android:paddingLeft="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/event_send"
            android:layout_weight="1"
            android:textSize="35px"
            android:text="邀请"
            android:textColor="#737373"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mylayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/bb"
        >
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/event_button"
        android:text="更换主题背景"
        android:textSize="17dp"
        android:textColor="#FFFFFF"
        android:gravity="right"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:orientation="horizontal"
        >
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="标题（晚宴、饮酒、聚会...）"
    android:textSize="20dp"
    android:textColor="#8D8D8D"
    android:paddingLeft="10dp"
    />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间" />

        <EditText
            android:id="@+id/inputDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间" />

        <EditText
            android:id="@+id/inputDate2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="400dp"
        >
        <EditText
            android:hint="地点(选填)"
            android:textSize="20px"
            android:textColor="#000000"
            android:padding="10dp"
            android:drawableLeft="@drawable/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />

        <EditText
            android:hint="邀请人员和圈子"
            android:textSize="20px"
            android:textColor="#000000"
            android:padding="10dp"
            android:drawableRight="@drawable/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none" />

    </LinearLayout>

</RelativeLayout>

</FrameLayout>
