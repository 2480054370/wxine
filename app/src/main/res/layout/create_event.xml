<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.wxine.android.CommunitiesFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#E4E4E4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#E4E4E4"
                android:drawableLeft="@drawable/close"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:text="取消"
                android:textColor="#737373"
                android:textSize="30px" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="#B9B9B9" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#E4E4E4"
                android:drawableLeft="@drawable/event_send"
                android:gravity="center"
                android:paddingLeft="60dp"
                android:text="邀请"
                android:textColor="#737373"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mylayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/topbutton"
            android:background="@drawable/bb"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/event_button"
                android:gravity="right"
                android:text="更换主题背景"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mylayout"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <EditText
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="标题（晚宴、饮酒、聚会...）"
                android:paddingLeft="10dp"
                android:background="@null"
                android:textColor="#c1c1c1"
                android:textSize="20dp"/>
            <View
                android:id="@+id/titleline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/titletext"
                android:background="#6db8b1"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/datastart"
                android:layout_width="200dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/datatextstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="开始日期" />

                <ImageView
                    android:id="@+id/subst"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/subscript" />

                <View
                    android:id="@+id/linest"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/subst"
                    android:background="#c1c1c1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timestart"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/timetextstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="开始时间" />

                <ImageView
                    android:id="@+id/subti"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/subscript" />

                <View
                    android:id="@+id/lineti"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/subti"
                    android:background="#c1c1c1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dataend"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@id/datastart"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/datatextend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="结束日期" />

                <ImageView
                    android:id="@+id/subend"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/subscript" />

                <View
                    android:id="@+id/linend"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/subend"
                    android:background="#c1c1c1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/timend"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/datastart"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/timetextend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="结束时间" />

                <ImageView
                    android:id="@+id/sub"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/subscript" />

                <View
                    android:id="@+id/line"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/sub"
                    android:background="#c1c1c1" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/loctionicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/place" />

            <TextView
                android:id="@+id/loctiontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/loctionicon"
                android:text="地点(选填)"
                android:textSize="15dp" />

            <View
                android:id="@+id/loctionline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/loctionicon"
                android:layout_marginTop="4dp"
                android:background="#c1c1c1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loction"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/addntext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="邀请人员和圈子"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/addicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/ic_input_add"
                android:tint="#c1c1c1" />

            <View
                android:id="@+id/addline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/addicon"
                android:layout_marginTop="4dp"
                android:background="#c1c1c1" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <EditText
                android:id="@+id/explaintext"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top|left"
                android:hint="说明（选填）"
                android:paddingLeft="10dp"
                android:background="@null"
                android:textColor="#c1c1c1"
                android:textSize="20dp"/>
            <View
                android:id="@+id/explainline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/explaintext"
                android:background="#6db8b1"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
