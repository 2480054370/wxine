<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    android:paddingRight="20dp">

    <View
        android:id="@+id/view_0"
        android:layout_width="3dp"
        android:layout_height="80dp"
        android:layout_marginLeft="35dp"
        android:background="#D4D4D4" />

    <View
        android:id="@+id/view_1"
        android:layout_width="3dp"
        android:layout_height="30dp"
        android:layout_marginLeft="35dp"
        android:background="#D4D4D4" />


    <ImageView
        android:id="@+id/images"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="28dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="3dp"
        android:layout_height="180dp"
        android:layout_below="@+id/images"
        android:layout_marginLeft="35dp"
        android:background="#D4D4D4" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:layout_marginTop="-50dp"
        android:layout_toRightOf="@+id/images">

        <android.support.v7.widget.CardView
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/wallpaper_d">

                <ImageView
                    android:id="@+id/im_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/singn" />
            </RelativeLayout>

            <com.wxine.android.utils.CircleImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/face" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="测试数据"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="#c1c1c1" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="WWWW"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/listview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="今天10:00"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:background="#E8E8E8"
                >
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E8E8E8"
                android:layout_weight="1"
                android:text="考勤"
                />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E8E8E8"
                    android:layout_weight="1"
                    android:text="请假"
                    />
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E8E8E8"
                    android:layout_weight="1"
                    android:text="评价"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
