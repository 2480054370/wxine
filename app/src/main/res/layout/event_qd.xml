<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F8F8"
        >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/qd_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0F9D58"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ImageView
        android:id="@+id/PersonalBgImage"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_weight="1"
        android:background="@drawable/topbackground"/>

    <com.wxine.android.utils.CircleImageView
        android:id="@+id/icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:fitsSystemWindows="true"
        android:src="@drawable/face" />

    <LinearLayout
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#5EB759"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/qdtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="12"
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经签到/人"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#5EB759"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="8"
                android:textSize="30sp"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未签到/人"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/show"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:background="#FFFFFF"
        android:paddingBottom="16.0dip"
        android:paddingTop="16.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:src="@drawable/qdedit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="手工签到"
            android:textColor="#292727"
            android:textSize="16.0sp"
            android:paddingLeft="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_arrow" />

    </TableRow>
    <TableRow
        android:id="@+id/LoginAuthentication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:paddingBottom="16.0dip"
        android:paddingTop="16.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:src="@drawable/scancode"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="扫码签到"
            android:textColor="#292727"
            android:textSize="16.0sp"
            android:paddingLeft="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_arrow" />

    </TableRow>



</LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/btn_takephoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reason"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到照片:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/im_qd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/takephoto"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


</LinearLayout>



